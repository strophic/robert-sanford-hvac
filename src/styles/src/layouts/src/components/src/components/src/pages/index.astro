---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Robert Sanford HVAC - Professional HVAC Services">
  <Header />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-gray-900 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Professional HVAC Services</h1>
        <p class="text-xl mb-8">Serving the Greater Atlanta Area with Quality HVAC Solutions</p>
        <a href="/robert-sanford-hvac/contact" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg inline-block">Contact Us Today</a>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="p-6 bg-white rounded-lg shadow-lg">
            <h3 class="text-xl font-bold mb-4">Installation</h3>
            <p class="text-gray-600">Expert installation of new HVAC systems for your home or business.</p>
          </div>
          <div class="p-6 bg-white rounded-lg shadow-lg">
            <h3 class="text-xl font-bold mb-4">Repair</h3>
            <p class="text-gray-600">Fast and reliable repair services for all HVAC equipment.</p>
          </div>
          <div class="p-6 bg-white rounded-lg shadow-lg">
            <h3 class="text-xl font-bold mb-4">Maintenance</h3>
            <p class="text-gray-600">Regular maintenance to keep your system running efficiently.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="bg-gray-100 py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Why Choose Us</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <h3 class="text-xl font-bold mb-4">Experience</h3>
            <p class="text-gray-600">Years of industry experience</p>
          </div>
          <div class="text-center">
            <h3 class="text-xl font-bold mb-4">Quality</h3>
            <p class="text-gray-600">Top-quality service guaranteed</p>
          </div>
          <div class="text-center">
            <h3 class="text-xl font-bold mb-4">Reliability</h3>
            <p class="text-gray-600">Dependable and timely service</p>
          </div>
          <div class="text-center">
            <h3 class="text-xl font-bold mb-4">Affordable</h3>
            <p class="text-gray-600">Competitive pricing options</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
