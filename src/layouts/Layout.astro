---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Professional HVAC services by Robert Sanford. Heating, cooling, and air conditioning installation, repair and maintenance."/>
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-white shadow-sm">
			<nav class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<a href="/" class="text-2xl font-bold text-blue-900">
						Robert Sanford HVAC
					</a>
					<div class="space-x-6">
						<a href="/" class="text-gray-700 hover:text-blue-900">Home</a>
						<a href="#services" class="text-gray-700 hover:text-blue-900">Services</a>
						<a href="#contact" class="text-gray-700 hover:text-blue-900">Contact</a>
					</div>
				</div>
			</nav>
		</header>

		<slot />

		<footer class="bg-blue-900 text-white py-8">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-xl font-semibold mb-4">Contact Us</h3>
						<p>Phone: (555) 123-4567</p>
						<p>Email: info@robertsanfordhvac.com</p>
					</div>
					<div>
						<h3 class="text-xl font-semibold mb-4">Hours</h3>
						<p>Monday-Friday: 8am-6pm</p>
						<p>Emergency Service Available</p>
					</div>
					<div>
						<h3 class="text-xl font-semibold mb-4">Service Area</h3>
						<p>Serving the greater metropolitan area</p>
						<p>Licensed and Insured</p>
					</div>
				</div>
				<div class="text-center mt-8 pt-8 border-t border-blue-800">
					<p>&copy; 2024 Robert Sanford HVAC. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>